{
  "name": "atomic-painter-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "@react-three/drei": "^9.121.3",
    "@react-three/fiber": "^8.17.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.165.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "vite": "^5.4.9",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.saadsci.atomicpainter",
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "Atomic Painter"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Science"
    },
    "files": [
      "dist/**",
      "electron/**",
      "index.html",
      "package.json"
    ],
    "extraResources": []
  }
}
